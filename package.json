{
  "name": "anyplace",
  "version": "1.0.0",
  "description": "A minimalist freeform note-taking application with infinite canvas, smart alignment guides, and rich formatting",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "serve": "python3 -m http.server 8080",
    "start": "npm run serve",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/anyplace.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/anyplace/issues"
  },
  "homepage": "https://github.com/yourusername/anyplace#readme",
  "keywords": [
    "notes",
    "note-taking",
    "typescript",
    "canvas",
    "infinite-canvas",
    "freeform",
    "rich-text",
    "alignment",
    "layers"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "live-server": "^1.2.2",
    "typescript": "^5.3.0"
  }
}
